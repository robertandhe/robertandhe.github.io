	<span class="p">{</span>
		<span class="n">InsertOneValue</span><span class="p">(</span><span class="n">tableName</span><span class="p">,</span> <span class="n">values</span><span class="p">[</span><span class="n">i</span><span class="p">]);</span>
	<span class="p">}</span>
