<span class="kt">void</span> <span class="n">MySQLEngine</span><span class="o">::</span><span class="n">InsertOneValue</span><span class="p">(</span><span class="n">string</span> <span class="n">tableName</span><span class="p">,</span> <span class="n">vector</span><span class="o">&lt;</span><span class="kt">double</span><span class="o">&gt;&amp;</span> <span class="n">values</span><span class="p">)</span>
