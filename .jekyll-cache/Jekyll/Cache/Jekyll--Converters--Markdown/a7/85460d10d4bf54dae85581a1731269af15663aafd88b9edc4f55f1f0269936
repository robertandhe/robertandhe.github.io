	<span class="k">if</span> <span class="p">(</span><span class="n">success</span><span class="p">)</span> <span class="p">{</span>
		<span class="n">qDebug</span><span class="p">()</span> <span class="o">&lt;&lt;</span> <span class="n">QObject</span><span class="o">::</span><span class="n">tr</span><span class="p">(</span><span class="s">"use table success."</span><span class="p">);</span>
	<span class="p">}</span>
	<span class="k">else</span> <span class="p">{</span>
		<span class="n">qDebug</span><span class="p">()</span> <span class="o">&lt;&lt;</span> <span class="n">QObject</span><span class="o">::</span><span class="n">tr</span><span class="p">(</span><span class="s">"use table failed."</span><span class="p">);</span>
