<span class="kt">void</span> <span class="n">MySQLEngineC</span><span class="o">::</span><span class="n">CreateTable</span><span class="p">(</span><span class="n">string</span> <span class="n">tableName</span><span class="p">,</span> <span class="n">vector</span><span class="o">&lt;</span><span class="n">string</span><span class="o">&gt;&amp;</span> <span class="n">fields</span><span class="p">)</span>
